@{
    ViewData["title"] = "Home";
}
@model List<voedselverspilling.Domain.Models.Package>

<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <div class="md:flex md:items-center md:justify-between">
      <h2 class="text-2xl font-bold tracking-tight text-gray-900">Pakketen:</h2>
      
    </div>

    <div class="mt-6 grid grid-cols-2 gap-x-4 gap-y-10 sm:gap-x-6 md:grid-cols-4 md:gap-y-0 lg:gap-x-8">
      @foreach(var package in Model)
      {
      <div class="group relative">
        <div class="h-56 w-full overflow-hidden rounded-md bg-gray-200 group-hover:opacity-75 lg:h-72 xl:h-80">
          <img src="~/images/@(package.ImageName).jpeg" alt="Verassing" class="h-full w-full object-cover object-center">
        </div>
        <h3 class="mt-4 text-sm text-gray-700">
          <a asp-area="" asp-controller="Packages" asp-action="@(package.Id)">
            <span class="absolute inset-0"></span>
            @package.Name
          </a>
        </h3>
        <p class="mt-1 text-sm text-gray-500">@package.MealType.ToString()</p>
        <p class="mt-1 text-sm font-medium text-gray-900">â‚¬@package.Price</p>
      </div>
      }

    </div>
  </div>
</div>

