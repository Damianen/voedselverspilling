@{
    Layout = "_Layout";
    ViewData["title"] = "Login";
}

<div class="bg-white">
  <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8 lg:pb-24">
    <div class="max-w-xl">
      <h1 class="text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl">Gereserveerde pakketten</h1>
      <p class="mt-2 text-sm text-gray-500">Dit is de status can alle pakketen die je hebt gereserveerd.</p>
    </div>

    <div class="mt-16">
          <table class="mt-4 w-full text-gray-500 sm:mt-6">
            <caption class="sr-only">
              Pakket
            </caption>
            <thead class="sr-only text-left text-sm text-gray-500 sm:not-sr-only">
              <tr>
                <th scope="col" class="py-3 pr-8 font-normal sm:w-2/5 lg:w-1/3">Pakket</th>
                <th scope="col" class="hidden w-1/5 py-3 pr-8 font-normal sm:table-cell">Prijs</th>
                <th scope="col" class="hidden py-3 pr-8 font-normal sm:table-cell">Status</th>
                <th scope="col" class="w-0 py-3 text-right font-normal">Info</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 border-b border-gray-200 text-sm sm:border-t">
              <tr>
                <td class="py-6 pr-8">
                  <div class="flex items-center">
                    <img src="~/images/Surprise.jpeg" alt="Detail of mechanical pencil tip with machined black steel shaft and chrome lead tip." class="mr-6 h-16 w-16 rounded object-cover object-center">
                    <div>
                      <div class="font-medium text-gray-900">Verassings pakket</div>
                      <div class="mt-1 sm:hidden">€10</div>
                    </div>
                  </div>
                </td>
                <td class="hidden py-6 pr-8 sm:table-cell">€10</td>
                <td class="hidden py-6 pr-8 sm:table-cell">Opgehaalt</td>
                <td class="whitespace-nowrap py-6 text-right font-medium">
                  <a href="#" class="text-indigo-600">Bekijk<span class="hidden lg:inline"> Pakket</span><span class="sr-only"></span></a>
                </td>
              </tr>

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
